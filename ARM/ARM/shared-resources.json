                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "[parameters('commonSettings').vnet.subnet.hostserver.address]",
                            "destinationPortRange": "443"
                        }
                    },
                    {
                        "name": "ssh-from-jumphost",
                        "properties": {
                            "priority": 200,
