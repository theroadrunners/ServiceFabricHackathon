{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tenantName": {
            "type": "string",
            "defaultValue": "nrw"
        },
        "repositoryUrl": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/theroadrunners/ServiceFabricHackathon/master/"
        },
        "serviceFabricClusterSize": {
            "type": "int",
            "defaultValue": 5
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "apiVersions": {
            "storageAccounts": "2015-06-15",
            "networkSecurityGroups": "2015-06-15",
            "loadBalancers": "2016-03-30",
            "virtualNetworks": "2015-06-15",
            "publicIPAddresses": "2015-06-15",
            "networkInterfaces": "2015-06-15",
            "virtualMachines": "2015-06-15",
            "virtualMachineScaleSets": "2015-06-15",
            "deployments": "2015-01-01"
        },
        "commonSettings": {
            "constants": {
                "apiVersions": {
                    "storageAccounts": "2015-06-15",
                    "networkSecurityGroups": "2015-06-15",
                    "loadBalancers": "2016-03-30",
                    "virtualNetworks": "2015-06-15",
                    "publicIPAddresses": "2015-06-15",
                    "networkInterfaces": "2015-06-15",
                    "virtualMachines": "2015-06-15",
                    "virtualMachineScaleSets": "2015-06-15",
                    "deployments": "2015-01-01",
                    "eventHub": "2014-09-01"
                }
            },
            "environment": {
                "blobEndpoint": "blob.core.windows.net"
            },
            "tenantName": "[parameters('tenantName')]",
            "repositoryUrl": "[parameters('repositoryUrl')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]",
            "vnet": {
                "name": "[concat(parameters('tenantName'),'-vnet')]",
                "address": "10.0.0.0/16",
                "subnet": {
                    "servicefabric": {
                        "name": "subnet-servicefabric",
                        "nsgName": "nsg-servicefabric",
                        "addressRangePrefix": "10.0.0",
                        "address": "10.0.0.0/24"
                    }
                }
            },
            "vm": {
                "vmStorageAccountContainerName": "vhds",
                "images": {
                    "standard": {
                        "publisher": "OpenLogic",
                        "offer": "CentOS",
                        "sku": "7.2",
                        "version": "latest"
                    }
                },
                "size": {
                    "regserver": "Standard_A1",
                    "database": "Standard_A1",
                    "hostserver": "Standard_A1",
                    "webportal": "Standard_A1",
                    "jumphost": "Standard_A0"
                }
            }
        }
    },
    "resources": [
        {
            "name": "shared-resources",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.deployments]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('commonSettings').repositoryUrl, '/ARM/ARM/shared-resources.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "commonSettings": {
                        "value": "[variables('commonSettings')]"
                    }
                }
            }
        }
    ]
}